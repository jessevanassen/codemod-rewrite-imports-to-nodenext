{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "nodeNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"declaration": true,
		"sourceMap": true,

		"strict": true,
		"noUncheckedIndexedAccess": true
	},
	"include": ["src/**/*.ts", "bin/**/*.ts", "test/**/*.ts"],
	"exclude": ["test/fixture/**/*"]
}
